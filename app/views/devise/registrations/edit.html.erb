<h1><%= t(:EDIT_USER) %></h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %> <i>(<%= t(:PASSWORD_LEAVE_BLANK) %>)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(<%= t(:CURRENT_PASSWORD_FOR_EDIT) %>)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <%= f.submit(t(:SUBMIT_UPDATE_USER_BUTTON), class: "btn btn-default") %>
    <% end %>

    <%= link_to t(:BACK_FROM_EDIT), :back, class: "btn btn-link" %>
  </div>
</div>
